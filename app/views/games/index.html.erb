<h1 class="title">Your games</h1>

<% if @games.exists? %>
  <table class="table">
    <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.name %></td>
        <td><%= link_to 'Show', game %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% else %>
  <p class="block">
    You don't have any games right now.
  </p>
<% end %>

<%= link_to 'New Game', new_game_path, class: "button is-black" %>

<br/>
<br/>
<br/>

<h1 class="title">Other active games</h1>

<% if @other_games.exists? %>
  <table class="table">
    <thead>
    <tr>
      <th>Name</th>
    </tr>
    </thead>

    <tbody>
    <% @other_games.each do |game| %>
      <tr>
        <td><%= game.name %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% else %>
  <p class="block">
    No other games are active right now.
  </p>
<% end %>
