<header class="hero is-light">
  <div class="hero-head">
    <nav aria-label="main navigation" class="navbar has-shadow" role="navigation">
      <div class="navbar-brand">
        <a class="navbar-item is-brand">
          <img alt="勉強 Benkyou" class="navbar-brand-logo" src="<%= asset_path("title.png") %>"/>
        </a>

        <a class="navbar-item is-tab is-hidden-mobile">Games</a>
        <a class="navbar-item is-tab is-hidden-mobile">Decks</a>
        <a class="navbar-item is-tab is-hidden-mobile">About</a>

        <button class="button navbar-burger" data-target="navMenu">
          <span></span>
          <span></span>
          <span></span>
        </button>
      </div>

      <div class="navbar-menu navbar-end" id="navMenu">
        <% if current_user %>
          <div class="navbar-item has-dropdown is-hoverable">
            <a class="navbar-link">
              <figure class="image is-32x32" style="margin-right:.5em;">
                <%= image_tag(curent_user.avatar_url) %>
              </figure>

              <%= current_user.full_name %>>
